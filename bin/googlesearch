#!/usr/bin/env bash

OP_ACCOUNT=$(devcli config get devcli.commands.op.accounts.personal)

GOOGLE_SEARCH_URL="https://www.googleapis.com/customsearch/v1?"
GOOGLE_SEARCH_ENGINE="cx=$(op --account=${OP_ACCOUNT} read op://Personal/custom_search_api/username)"
GOOGLE_DEVELOPER_API_KEY="key=$(op --account=${OP_ACCOUNT} read op://Personal/custom_search_api/credential)"

SEARCH_URL="${GOOGLE_SEARCH_URL}${GOOGLE_SEARCH_ENGINE}&${GOOGLE_DEVELOPER_API_KEY}"

[[ -z ${@} ]] && echo "Usage: googlesearch TERMS" && exit 1;

SEARCH_TERMS="q=$(echo -n ${@} | urlencode)"

curl --silent "${SEARCH_URL}&${SEARCH_TERMS}"
